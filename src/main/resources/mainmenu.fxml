<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@play_stylesheet.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.MainMenuController">
   <children>
      <BorderPane layoutX="55.0" layoutY="42.0" prefHeight="303.0" prefWidth="489.0" stylesheets="@play_stylesheet.css">
         <top>
            <Label id="ps-label" fx:id="mylabel" alignment="CENTER" text="Tic-Tac-Toe" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <VBox id="ps-buttons" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Local Game" />
                  <Button mnemonicParsing="false" text="LAN Game" />
               </children>
            </VBox>
         </center>
         <bottom>
            <ToggleButton id="music-toggle" fx:id="toggleButton" mnemonicParsing="false" onAction="#ToggleMusic" prefHeight="33.0" prefWidth="104.0" text="ToggleButton" BorderPane.alignment="CENTER_RIGHT" />
         </bottom>
         <left>
            <ImageView fitHeight="178.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@tumblr_o5oyh080Gl1scrs51o1_500.gif" />
               </image>
            </ImageView>
         </left></BorderPane>
   </children>
</AnchorPane>
